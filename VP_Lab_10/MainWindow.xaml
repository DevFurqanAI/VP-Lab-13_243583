<Window x:Class="VP_Lab_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Registration System" Height="600" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="EmpId:" Width="100"/>
                <TextBox x:Name="EmpIdTextBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Name:" Width="100"/>
                <TextBox x:Name="NameTextBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Father Name:" Width="100"/>
                <TextBox x:Name="FatherNameTextBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="CNIC:" Width="100"/>
                <TextBox x:Name="CNICTextBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Designation:" Width="100"/>
                <TextBox x:Name="DesignationTextBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Salary:" Width="100"/>
                <TextBox x:Name="SalaryTextBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Department:" Width="100"/>
                <ComboBox x:Name="DepartmentComboBox" Width="200">
                    <ComboBoxItem Content="HR"/>
                    <ComboBoxItem Content="IT"/>
                    <ComboBoxItem Content="Finance"/>
                    <ComboBoxItem Content="Marketing"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Hire Date:" Width="100"/>
                <DatePicker x:Name="HireDatePicker" Width="200"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
            <Button x:Name="AddButton" Content="Add" Width="100" Margin="5" Click="AddButton_Click"/>
            <Button x:Name="UpdateButton" Content="Update" Width="100" Margin="5" Click="UpdateButton_Click"/>
            <Button x:Name="DeleteButton" Content="Delete" Width="100" Margin="5" Click="DeleteButton_Click"/>
            <Button x:Name="LoadAllButton" Content="Load All" Width="100" Margin="5" Click="LoadAllButton_Click"/>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid x:Name="EmployeesDataGrid" Grid.Row="2" AutoGenerateColumns="True"
                  IsReadOnly="True" Margin="0,10,0,0"/>
    </Grid>
</Window>
